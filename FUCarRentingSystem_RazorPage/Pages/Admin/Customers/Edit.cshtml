@page "{id?}"
@model EditModel

@{
    ViewData["Title"] = "Edit";
}
<div class="card">
    <div class="card-header">
        <h1 class="card-title">Edit Customer @Model.Customer.CustomerName</h1>
    </div>
    <section class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-page="./Edit" id="edit-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Customer.Id" />
                    <div class="form-group">
                        <label asp-for="Customer.CustomerName" class="control-label"></label>
                        <input asp-for="Customer.CustomerName" class="form-control" />
                        <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Email" class="control-label"></label>
                        <input asp-for="Customer.Email" class="form-control" />
                        <span asp-validation-for="Customer.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Password" class="control-label"></label>
                        <input asp-for="Customer.Password" class="form-control" />
                        <span asp-validation-for="Customer.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Mobile" class="control-label"></label>
                        <input asp-for="Customer.Mobile" class="form-control" />
                        <span asp-validation-for="Customer.Mobile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.Birthday" class="control-label"></label>
                        <input asp-for="Customer.Birthday" class="form-control" />
                        <span asp-validation-for="Customer.Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.IdentityCard" class="control-label"></label>
                        <input asp-for="Customer.IdentityCard" class="form-control" />
                        <span asp-validation-for="Customer.IdentityCard" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Customer.LicenceNumber" class="control-label"></label>
                        <input asp-for="Customer.LicenceNumber" class="form-control" />
                        <span asp-validation-for="Customer.LicenceNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Customer.LicenceDate" class="control-label"></label>
                        <input asp-for="Customer.LicenceDate" class="form-control" />
                        <span asp-validation-for="Customer.LicenceDate" class="text-danger"></span>
                    </div>
                    <span class="text-danger my-2"> @ViewData["ErrorMessage"]</span>
                </form>
            </div>
        </div>
    </section>
    <div class="card-footer d-flex gap-2">
        <div class="form-group">
            <input form="edit-form" type="submit" value="Save" class="btn btn-primary" />
        </div>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="card">Cancel</button>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
