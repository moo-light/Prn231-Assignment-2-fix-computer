@page "{carId},{customerId},{date}"
@model             DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CarRental</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.RentPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.RentPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Customer.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarRental.Car)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarRental.Car.CarName)
        </dd>
    </dl>
</div>
<div class="text-danger my-2">@ViewData["ErrorMessage"]</div>
<form class="d-flex gap-2 my-2" method="post">
    <button type="submit" onclick="return confirm('Are you sure?')" class="btn btn-danger">Remove Transaction</button>
    <a class="page-link"  asp-page="./Index">Back to List</a>
</form>
